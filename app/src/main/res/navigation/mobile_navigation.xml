<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fridgebuddy.ui.home.HomeFragment"
        android:label="Fridge Buddy"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fridgebuddy.ui.Inventory.InventoryFragment"
        android:label="Inventory"
        tools:layout="@layout/fragment_inventory" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fridgebuddy.ui.ScanBarcode.ScanBarcodeFragment"
        android:label="Scan Barcode"
        tools:layout="@layout/fragment_scanbarcode" />

    <fragment
        android:id="@+id/navigation_ShoppingList"
        android:name="com.example.fridgebuddy.ui.ShoppingList.ShoppingListFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shoppinglist" />
</navigation>