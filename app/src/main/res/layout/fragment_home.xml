<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">


            <TextView
                android:id="@+id/dayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="88dp"
                android:fontFamily="@font/vidaloka"
                android:text="Day of the Week"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monthAndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="113dp"
                android:fontFamily="@font/vidaloka"
                android:text="Month and Day"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Notifications"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="54dp"
                android:fontFamily="@font/vidaloka"
                android:text="Notifications"
                android:textColor="#252424"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/green_two"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"
                android:layout_marginTop="257dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/green_two"
                android:clickable="false"
                android:fontFamily="@font/vidaloka"
                android:textAlignment="center"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/scannow"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/AddItem"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="271dp"
                android:layout_marginEnd="33dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/vidaloka"
                android:text="@string/scan_now"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/AddItem"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="174dp"
                android:layout_marginEnd="33dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/vidaloka"
                android:text="@string/add_item"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="267dp"
                android:fontFamily="@font/vidaloka"
                android:text="@string/scan_barcode"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="299dp"
                android:fontFamily="@font/vidaloka"
                android:text="@string/use_camera_to_scan_your_food_products"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mintbox3"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/mint_box"
                android:clickable="false"
                android:fontFamily="@font/vidaloka"
                android:textAlignment="center"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="207dp"
                android:fontFamily="@font/vidaloka"
                android:text="@string/tracks_expiration_dates"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="176dp"
                android:fontFamily="@font/vidaloka"
                android:text="@string/fridge_inventory"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!-- Will be used later on when we have items added -->

            <TextView
                android:id="@+id/Notif1"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="23dp"
                android:text="First Notification"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Notif2"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="-3dp"
                android:text="Second Notification"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expiringFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="349dp"
                android:layout_marginEnd="243dp"
                android:fontFamily="@font/vidaloka"
                android:text="Expiring Soon"
                android:textColor="#101010"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- ListView to display the list of food items with expiration dates
                   Will be used when we have items to display-->

            <ListView
                android:id="@+id/idLVLanguages"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="33dp">

            </ListView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="51dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="77dp"
                    android:layout_height="79dp"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/dateCalendar"
                    android:layout_width="43dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Date"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>